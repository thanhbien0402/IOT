<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screen"
    tools:context=".PumpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/logo">

        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="IOT ASSIGNMENT"
            android:textColor="#081F9E"
            android:textSize="36dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:text="Pump Activity"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#081F9E">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height=""
        android:layout_weight="5">

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="20"
            android:textSize="30dp"
            app:colorBorder="@color/colorAccent"
            app:on="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height=""
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNotification"
            android:layout_width=""
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="Notification"
            android:textSize="36dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#081F9E"
            >

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">


        <ImageButton
            android:id="@+id/scheduler_button"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/scheduler_icon" />

        <ImageButton
            android:id="@+id/temperature_button"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/temperature_icon" />

        <ImageButton
            android:id="@+id/home_button"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_icon" />

        <ImageButton
            android:id="@+id/lamp_button"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/lamp_icon" />

        <ImageButton
            android:id="@+id/pump_button"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/pump_icon" />


    </LinearLayout>

</LinearLayout>